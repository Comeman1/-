}

.containner {
  width:1500rpx;
   height:300rpx;
}

.nav_wraper {
  margin-top:20rpx;
    float:left;
}
.clearfix::after {
      content:"";
      height:0;
      width:0;
      line-height:0;
      display:block;
      visibility: hidden;
      clear:both;
}

.nav_wraper .info{
  width:150rpx;
  height:130rpx;
  display:inline-block;
  font-size:20rpx;
  vertical-align: center;

}

.nav_wraper image {
  width:100rpx;
  height:90rpx;
  margin-left:30rpx;
}
.info text {
  margin-left:40rpx;
}



.nav_footer {
   margin-top:40rpx;
   position:relative;
}
.nav_footer .arrow {
  display:block;
  width:50rpx;
  height:40rpx;
   position:absolute;
   left:20rpx;
}


.nav_footer text {
  font-size:20rpx;
  font-weight:bold;
  padding:30rpx;
}

